# e None --context https://github.com/Azure-Samples/acr-build-helloworld-node.git --pull-request-trigger-enabled true --gi
# t-access-token 000000000000000000000000000000000

az acr task run --registry $DEV_ACR --name buildpixelweb

az acr task logs --registry $DEV_ACR

az acr task list-runs --registry $DEV_ACR -o table
